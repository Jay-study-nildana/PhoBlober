@{
}

@model TextTranslatedDTO

<h1>@ViewData["Title"]</h1>

<div>
    <p>Text Translation Successfull</p>

    <button><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="TextTranslation">Translate Text Again</a></button>
</div>
<div>
    <p>@Model.OriginalText</p>
</div>
<hr />
<div>
        @foreach (var item in Model.TextUnits)
        {
            <div>
                <p>@item.Language</p>
                <p>@item.TranslatedText</p>
            </div>
        <hr />
        }
</div>